@import '../stylus/normalize'
@import 'nib'

$headerSize = 85px
$headerPadding = 10px

$rulerHeight = 8px
$rulerRoundedCorner = 1px
$rulerStartPoint = 25px

$rulerSize = 6000px
$rulerInterval = 50px

$deviceScale = .028
$devicesStartPoint = 31px

$desktopWidth = 1200px
$desktopHeight = 800px

$tabletLandscapeWidth = 1024px
$tabletLandscapeHeight = 768px

$mobileLandscapeWidth = 480px
$mobileLandscapeHeight = 320px

$smallTabletLandscapeWidth = 640px
$smallTabletLandscapeHeight = 460px

*
    box-sizing: border-box

::-webkit-input-placeholder
    color: #bbb
    font-size: 12px

:-moz-placeholder
    color: #bbb
    font-size: 12px

html,
body
    background: #585858
    overflow: hidden

.page
    margin: 0

    header
        background: #eee /*585858*/
        border-bottom: 1px solid #fff
        box-shadow: 0 0 10px rgba(0, 0, 0, .6)
        color: #fff
        height: $headerSize
        left: -1 * $headerPadding
        padding: $headerPadding $headerPadding 0
        position: fixed
        right: -1 * $headerPadding
        top: -1 * $headerPadding
        z-index: 2

        h1
            absolute: left 20px top 8px
            color: #4ab2d4
            font-size: 22px
            margin: 10px 0 0
            text-shadow: 1px 1px 0 #fff

        .help
            color: #4ab2d4
            cursor: pointer
            position: absolute
            right: 20px
            top: 20px

            &:hover
                color: #fff




        .devices
            absolute: left 50%
            top: $devicesStartPoint
            height: 1px;
            margin-left:  -1 * ($rulerSize / 2)
            width: $rulerSize
            z-index: 3

            .device
                cursor: pointer

                p
                    background: #4ab2d4
                    border-radius: 3px
                    box-shadow: 0 1px 2px rgba(0, 0, 0, .3)
                    color: #fff
                    display: none
                    font-size: 12px
                    absolute: top 50px left 50%
                    margin-left: -120px
                    padding: 10px
                    text-align: center
                    width: 240px
                    z-index: 5

                &:after
                    background: #e7e7e7
                    border-radius: 2px
                    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .2)
                    content: ''
                    absolute: top 0 left 50%
                    z-index: 4

                &:hover p
                    display: block

                &:hover:after
                    background: #96def6
                    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .4)

                &.selected:after
                    background: #4ab2d4
                    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .2)

                &:before
                    background: #96def6
                    content: ''
                    display: none
                    height: 7px
                    absolute: top 20px left 50%

                &:hover:before
                    display: block

                &.auto:before
                    left: 0
                    right: 0

                &.auto:after
                    border-radius: 10px
                    height: 8px
                    margin-left: -4px
                    margin-top: -4px
                    width: 8px

                &.desktop:before
                    margin-left: (-1 * $desktopWidth / 2)
                    width: $desktopWidth

                &.desktop:after
                    height: $desktopHeight * $deviceScale
                    margin-left: -125px
                    margin-top: (-1 * $desktopHeight * $deviceScale / 2 )
                    width: $desktopWidth * $deviceScale

                &.tablet-portrait
                    &:before
                        margin-left: (-1 * $tabletLandscapeHeight / 2)
                        width: $tabletLandscapeHeight

                    &:after
                        height: $tabletLandscapeWidth * $deviceScale
                        margin-left: 60px
                        margin-top: (-1 * $tabletLandscapeWidth * $deviceScale / 2 )
                        width: $tabletLandscapeHeight * $deviceScale

                &.tablet-landscape:
                    &:before
                        margin-left: (-1 * $tabletLandscapeWidth / 2)
                        width: $tabletLandscapeWidth

                    &:after
                        height: $tabletLandscapeHeight * $deviceScale
                        margin-left: -85px
                        margin-top: (-1 * $tabletLandscapeHeight * $deviceScale / 2 )
                        width: $tabletLandscapeWidth * $deviceScale

                &.small-tablet-portrait
                    &:before
                        margin-left: (-1 * $smallTabletLandscapeHeight / 2)
                        width: $smallTabletLandscapeHeight

                    &:after
                        height: $smallTabletLandscapeWidth * $deviceScale
                        margin-left: 35px
                        margin-top: (-1 * $smallTabletLandscapeWidth * $deviceScale / 2 )
                        width: $smallTabletLandscapeHeight * $deviceScale

                &.small-tablet-landscape
                    &:before
                        margin-left: (-1 * $smallTabletLandscapeWidth / 2)
                        width: $smallTabletLandscapeWidth

                    &:after
                        height: $smallTabletLandscapeHeight * $deviceScale
                        margin-left: -50px
                        margin-top: (-1 * $smallTabletLandscapeHeight * $deviceScale / 2 )
                        width: $smallTabletLandscapeWidth * $deviceScale

                &.mobile-portrait
                    &:before
                        margin-left: (-1 * $mobileLandscapeHeight / 2)
                        width: $mobileLandscapeHeight

                    &:after
                        height: $mobileLandscapeWidth * $deviceScale
                        margin-left: 15px
                        margin-top: (-1 * $mobileLandscapeWidth * $deviceScale / 2 )
                        width: $mobileLandscapeHeight * $deviceScale

                &.mobile-landscape
                    &:before
                        margin-left: (-1 * $mobileLandscapeWidth / 2)
                        width: $mobileLandscapeWidth

                    &:after
                        height: $mobileLandscapeHeight * $deviceScale
                        margin-left: -25px
                        margin-top: (-1 * $mobileLandscapeHeight * $deviceScale / 2 )
                        width: $mobileLandscapeWidth * $deviceScale

        .ruler
            background: #d7d7d7
            border-bottom: 1px solid #fff
            bottom: $rulerStartPoint
            box-shadow: inset 0 1px 1px #acacac
            height: $rulerHeight
            absolute: left 50%
            margin-left:  -1 * ($rulerSize / 2)
            width: $rulerSize

            .ruler-marker
                background: #4ab2d4
                height: 100%
                absolute: right 0 left 0
                margin: auto
                transition( width .4s )
                width: 100%
                z-index: 7

                &:before,
                &:after
                    content: ''
                    absolute: top 0
                    height: 100%
                    width: 30px

                &:before
                    background: linear-gradient(right, #4ab2d4 0%, #5ec1e1 50%)
                    border-radius: $rulerRoundedCorner 0 0 $rulerRoundedCorner
                    left: -1 * $rulerRoundedCorner

                &:after
                    background: linear-gradient(left, #4ab2d4 0%, #5ec1e1 50%)
                    border-radius: 0 $rulerRoundedCorner $rulerRoundedCorner 0
                    right: -1 * $rulerRoundedCorner - 1

                .ui-resizable-handle
                    background: #fcc;
                    height: 20px
                    absolute: top -20px
                    width: 20px

                .ui-resizable-e
                    right: -10px;


                .ui-resizable-w
                    left: -10px;

            .ruler-left,
            .ruler-right
                height: 100%
                width: 100%

            .ruler-left
                absolute: right 50%
                margin-right: -1 * $rulerRoundedCorner

            .ruler-right
                absolute: left 50%
                margin-left: -1 * $rulerRoundedCorner

            .rule
                border: 1px solid #d7d7d7
                border-left-color: #fff
                height: 5px
                position: absolute
                top: $rulerHeight - 1
                z-index: 3
                width: 1px

                &:after
                    content: attr(data-rule)
                    color: #bbb
                    font: 9px/10px Verdana, san-serif
                    position: absolute
                    bottom: -12px
                    left: -1 * $rulerInterval
                    text-align: center
                    width: $rulerInterval * 2

            &:after
                content: ''
                position: absolute
                top: 0
                box-shadow: inset 0 1px rgba(0, 0, 0, .15)
                height: 100%
                width: 30px

    .url
        border-radius: 4px
        box-shadow: 0 1px 2px rgba(0, 0, 0, .3)
        absolute: top 98px right 18px
        z-index: 4

        form
            padding-right: 35px;
            width: 100%

            input
                border-radius: 4px 0 0 4px
                border: 0
                box-shadow: inset 0 1px 1px rgba(0, 0, 0, .2)
                color: #666
                font-size: 12px
                line-height: 24px
                padding: 0 10px
                outline: none
                transition( all .75s )
                width: 52px

            button
                background: linear-gradient(top, #4ab2d4 0%, #5ec1e1)
                border: 0
                border-radius: 0 4px 4px 0
                color: #fff
                font-size: 10px
                height: 24px
                line-height: 20px
                absolute: right 0
                text-transform: uppercase
                width: 35px


    .url:hover
        input
            width: 500px
    .url
        input:focus
            width: 500px

    .page-content
        background: #fff
        height: 100%
        margin: -2px auto auto;
        top: $headerSize - 10px
        position: relative
        width: 100%

        iframe
            border: 0
            margin: auto
            height: 100%
            width: 100%

    .page-content.fx
        transition( width .4s )