$rulerHeight = 8px
$rulerRoundedCorner = 1px
$rulerStartPoint = 25px

.ruler
    background: #d7d7d7
    border-bottom: 1px solid #fff
    bottom: $rulerStartPoint
    box-shadow: inset 0 1px 1px #acacac
    height: $rulerHeight
    absolute: left 50%
    margin-left:  -1 * ($rulerSize / 2)
    width: $rulerSize

    .ruler-marker
        background: #4ab2d4
        height: 100%
        absolute: right 0 left 0
        margin: auto
        transition( width .4s )
        width: 100%
        z-index: 7

        &:before,
        &:after
            content: ''
            absolute: top 0
            height: 100%
            width: 30px

        &:before
            background: linear-gradient(right, #4ab2d4 0%, #5ec1e1 50%)
            border-radius: $rulerRoundedCorner 0 0 $rulerRoundedCorner
            left: -1 * $rulerRoundedCorner

        &:after
            background: linear-gradient(left, #4ab2d4 0%, #5ec1e1 50%)
            border-radius: 0 $rulerRoundedCorner $rulerRoundedCorner 0
            right: -1 * $rulerRoundedCorner - 1

        .ui-resizable-handle
            background: #fcc;
            height: 20px
            absolute: top -20px
            width: 20px

        .ui-resizable-e
            right: -10px;


        .ui-resizable-w
            left: -10px;

    .ruler-left,
    .ruler-right
        height: 100%
        width: 100%

    .ruler-left
        absolute: right 50%
        margin-right: -1 * $rulerRoundedCorner

    .ruler-right
        absolute: left 50%
        margin-left: -1 * $rulerRoundedCorner

    .rule
        border: 1px solid #d7d7d7
        border-left-color: #fff
        height: 5px
        position: absolute
        top: $rulerHeight - 1
        z-index: 3
        width: 1px

        &:after
            content: attr(data-rule)
            color: #bbb
            font: 9px/10px Verdana, san-serif
            position: absolute
            bottom: -12px
            left: -1 * $rulerInterval
            text-align: center
            width: $rulerInterval * 2

    &:after
        content: ''
        position: absolute
        top: 0
        box-shadow: inset 0 1px rgba(0, 0, 0, .15)
        height: 100%
        width: 30px