.url
    border-radius: 4px
    box-shadow: 0 1px 2px rgba(0, 0, 0, .3)
    absolute: top 98px right 18px
    z-index: 4

    form
        padding-right: 35px;
        width: 100%

        input
            border-radius: 4px 0 0 4px
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .2)
            color: #666
            font-size: 12px
            line-height: 24px
            height: 24px
            padding: 0 10px
            outline: none
            // transition( width .75s )
            width: 52px

        button
            background: linear-gradient(top, #4ab2d4 0%, #5ec1e1)
            border: 0
            border-radius: 0 4px 4px 0
            color: #fff
            font-size: 10px
            height: 24px
            line-height: 20px
            absolute: right 0 top 0
            text-transform: uppercase
            width: 35px


    &:hover
        input
            width: 500px
    & input:focus
            width: 500px